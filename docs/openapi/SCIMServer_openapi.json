{
  "openapi": "3.0.3",
  "info": {
    "title": "SCIMServer API",
    "version": "1.2.0",
    "description": "OpenAPI specification for SCIMServer SCIM 2.0 server. Passes all 25 Microsoft SCIM Validator tests. Implements RFC 7644 §3.4.2.5 attribute projection, §3.4.3 POST /.search, §3.14 ETag/conditional requests."
  },
  "servers": [{ "url": "http://localhost:6000/scim/endpoints/{endpointId}", "description": "Local dev server" }],
  "paths": {
    "/Users": {
      "post": {
        "summary": "Create SCIM User",
        "requestBody": { "required": true, "content": { "application/scim+json": { "schema": { "type": "object" } } } },
        "responses": {
          "201": { "description": "Created", "headers": { "ETag": { "schema": { "type": "string" }, "description": "Resource version for conditional requests" } } },
          "409": { "description": "Conflict — duplicate userName" }
        }
      },
      "get": {
        "summary": "List / Filter Users",
        "description": "Supports full ABNF filter parser (RFC 7644 §3.4.2.2), case-insensitive matching, attribute projection (§3.4.2.5)",
        "parameters": [
          { "name": "filter", "in": "query", "schema": { "type": "string" }, "description": "e.g. userName eq \"alice@example.com\" (case-insensitive)" },
          { "name": "startIndex", "in": "query", "schema": { "type": "integer", "default": 1 } },
          { "name": "count", "in": "query", "schema": { "type": "integer", "default": 100 } },
          { "name": "attributes", "in": "query", "schema": { "type": "string" }, "description": "Comma-separated attributes to include (RFC 7644 §3.4.2.5), e.g. userName,displayName" },
          { "name": "excludedAttributes", "in": "query", "schema": { "type": "string" }, "description": "Comma-separated attributes to exclude, e.g. emails,phoneNumbers" }
        ],
        "responses": { "200": { "description": "ListResponse" } }
      }
    },
    "/Users/.search": {
      "post": {
        "summary": "Search Users via POST (RFC 7644 §3.4.3)",
        "description": "POST-based search as an alternative to GET with query params. Accepts SearchRequest body.",
        "requestBody": {
          "required": true,
          "content": {
            "application/scim+json": {
              "schema": { "$ref": "#/components/schemas/SearchRequest" },
              "example": {
                "schemas": ["urn:ietf:params:scim:api:messages:2.0:SearchRequest"],
                "filter": "userName eq \"alice@example.com\"",
                "startIndex": 1,
                "count": 10,
                "attributes": "userName,displayName"
              }
            }
          }
        },
        "responses": { "200": { "description": "ListResponse" } }
      }
    },
    "/Users/{id}": {
      "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
      "get": {
        "summary": "Get User",
        "parameters": [
          { "name": "attributes", "in": "query", "schema": { "type": "string" }, "description": "Comma-separated attributes to include" },
          { "name": "excludedAttributes", "in": "query", "schema": { "type": "string" }, "description": "Comma-separated attributes to exclude" }
        ],
        "responses": {
          "200": { "description": "User resource", "headers": { "ETag": { "schema": { "type": "string" }, "description": "Resource version (meta.version)" } } },
          "304": { "description": "Not Modified — returned when If-None-Match matches current ETag" },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Replace User",
        "parameters": [
          { "name": "If-Match", "in": "header", "schema": { "type": "string" }, "description": "ETag for conditional replace (returns 412 on mismatch)" }
        ],
        "responses": {
          "200": { "description": "Updated", "headers": { "ETag": { "schema": { "type": "string" } } } },
          "412": { "description": "Precondition Failed — If-Match ETag mismatch" }
        }
      },
      "patch": {
        "summary": "Patch User",
        "description": "Supports valuePath filters, extension URN paths, no-path object merges",
        "parameters": [
          { "name": "If-Match", "in": "header", "schema": { "type": "string" }, "description": "ETag for conditional patch" }
        ],
        "responses": {
          "200": { "description": "Patched", "headers": { "ETag": { "schema": { "type": "string" } } } },
          "412": { "description": "Precondition Failed" }
        }
      },
      "delete": { "summary": "Delete User", "responses": { "204": { "description": "No content" } } }
    },
    "/Groups": {
      "post": {
        "summary": "Create Group",
        "responses": {
          "201": { "description": "Created", "headers": { "ETag": { "schema": { "type": "string" } } } },
          "409": { "description": "Conflict — duplicate displayName" }
        }
      },
      "get": {
        "summary": "List / Filter Groups",
        "parameters": [
          { "name": "filter", "in": "query", "schema": { "type": "string" }, "description": "e.g. displayName eq \"Engineering\" (case-insensitive)" },
          { "name": "startIndex", "in": "query", "schema": { "type": "integer" } },
          { "name": "count", "in": "query", "schema": { "type": "integer" } },
          { "name": "attributes", "in": "query", "schema": { "type": "string" }, "description": "Comma-separated attributes to include" },
          { "name": "excludedAttributes", "in": "query", "schema": { "type": "string" }, "description": "Comma-separated attributes to exclude, e.g. members" }
        ],
        "responses": { "200": { "description": "ListResponse" } }
      }
    },
    "/Groups/.search": {
      "post": {
        "summary": "Search Groups via POST (RFC 7644 §3.4.3)",
        "requestBody": {
          "required": true,
          "content": {
            "application/scim+json": {
              "schema": { "$ref": "#/components/schemas/SearchRequest" },
              "example": {
                "schemas": ["urn:ietf:params:scim:api:messages:2.0:SearchRequest"],
                "filter": "displayName eq \"Engineering\"",
                "startIndex": 1,
                "count": 10
              }
            }
          }
        },
        "responses": { "200": { "description": "ListResponse" } }
      }
    },
    "/Groups/{id}": {
      "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
      "get": {
        "summary": "Get Group",
        "parameters": [
          { "name": "attributes", "in": "query", "schema": { "type": "string" }, "description": "Comma-separated attributes to include" },
          { "name": "excludedAttributes", "in": "query", "schema": { "type": "string" }, "description": "e.g. members" }
        ],
        "responses": {
          "200": { "description": "Group resource", "headers": { "ETag": { "schema": { "type": "string" } } } },
          "304": { "description": "Not Modified" },
          "404": { "description": "Not found" }
        }
      },
      "put": { "summary": "Replace Group", "responses": { "200": { "description": "Updated", "headers": { "ETag": { "schema": { "type": "string" } } } } } },
      "patch": { "summary": "Patch Group", "responses": { "200": { "description": "Patched", "headers": { "ETag": { "schema": { "type": "string" } } } } } },
      "delete": { "summary": "Delete Group", "responses": { "204": { "description": "No content" } } }
    },
    "/admin/log-config": {
      "get": {
        "summary": "Get log configuration",
        "description": "Returns the current runtime log configuration including global level, category overrides, endpoint overrides, and available levels/categories.",
        "tags": ["Admin - Logging"],
        "responses": {
          "200": {
            "description": "Current log configuration",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LogConfigResponse" }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update log configuration",
        "description": "Partial update of runtime log configuration. Only include fields you want to change.",
        "tags": ["Admin - Logging"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LogConfigUpdate" },
              "example": {
                "globalLevel": "INFO",
                "includePayloads": false,
                "format": "json",
                "categoryLevels": { "scim.patch": "DEBUG", "auth": "WARN" }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Configuration updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "config": { "$ref": "#/components/schemas/LogConfigResponse" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/admin/log-config/level/{level}": {
      "put": {
        "summary": "Set global log level",
        "description": "Quick shortcut to change the global minimum log level.",
        "tags": ["Admin - Logging"],
        "parameters": [
          { "name": "level", "in": "path", "required": true, "schema": { "type": "string", "enum": ["TRACE", "DEBUG", "INFO", "WARN", "ERROR", "FATAL", "OFF"] } }
        ],
        "responses": {
          "200": {
            "description": "Global level updated",
            "content": {
              "application/json": {
                "example": { "message": "Global log level set to TRACE", "globalLevel": "TRACE" }
              }
            }
          }
        }
      }
    },
    "/admin/log-config/category/{category}/{level}": {
      "put": {
        "summary": "Set category log level",
        "description": "Set or override the log level for a specific log category.",
        "tags": ["Admin - Logging"],
        "parameters": [
          { "name": "category", "in": "path", "required": true, "schema": { "type": "string", "enum": ["http", "auth", "scim.user", "scim.group", "scim.patch", "scim.filter", "scim.discovery", "endpoint", "database", "backup", "oauth", "general"] } },
          { "name": "level", "in": "path", "required": true, "schema": { "type": "string", "enum": ["TRACE", "DEBUG", "INFO", "WARN", "ERROR", "FATAL", "OFF"] } }
        ],
        "responses": {
          "200": {
            "description": "Category level updated",
            "content": { "application/json": { "example": { "message": "Category 'scim.patch' log level set to TRACE" } } }
          }
        }
      }
    },
    "/admin/log-config/endpoint/{endpointId}/{level}": {
      "put": {
        "summary": "Set endpoint log level override",
        "description": "Set a log level override for a specific SCIM endpoint. This takes highest priority in the 3-tier cascade.",
        "tags": ["Admin - Logging"],
        "parameters": [
          { "name": "endpointId", "in": "path", "required": true, "schema": { "type": "string" } },
          { "name": "level", "in": "path", "required": true, "schema": { "type": "string", "enum": ["TRACE", "DEBUG", "INFO", "WARN", "ERROR", "FATAL", "OFF"] } }
        ],
        "responses": {
          "200": {
            "description": "Endpoint level override set",
            "content": { "application/json": { "example": { "message": "Endpoint 'ep-abc123' log level set to TRACE" } } }
          }
        }
      }
    },
    "/admin/log-config/endpoint/{endpointId}": {
      "delete": {
        "summary": "Remove endpoint log level override",
        "description": "Remove the log level override for a specific SCIM endpoint, reverting to category or global level.",
        "tags": ["Admin - Logging"],
        "parameters": [
          { "name": "endpointId", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "204": { "description": "Endpoint override removed" }
        }
      }
    },
    "/admin/log-config/recent": {
      "get": {
        "summary": "Query recent log entries",
        "description": "Retrieve entries from the in-memory ring buffer (last 500 entries). Supports filtering by level, category, requestId, and endpointId.",
        "tags": ["Admin - Logging"],
        "parameters": [
          { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 100 }, "description": "Max entries to return" },
          { "name": "level", "in": "query", "schema": { "type": "string", "enum": ["TRACE", "DEBUG", "INFO", "WARN", "ERROR", "FATAL"] }, "description": "Minimum severity filter" },
          { "name": "category", "in": "query", "schema": { "type": "string" }, "description": "Filter by log category" },
          { "name": "requestId", "in": "query", "schema": { "type": "string" }, "description": "Filter by correlation request ID" },
          { "name": "endpointId", "in": "query", "schema": { "type": "string" }, "description": "Filter by SCIM endpoint ID" }
        ],
        "responses": {
          "200": {
            "description": "Recent log entries",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "count": { "type": "integer" },
                    "entries": { "type": "array", "items": { "$ref": "#/components/schemas/StructuredLogEntry" } }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Clear recent log buffer",
        "description": "Clear the in-memory ring buffer of recent log entries.",
        "tags": ["Admin - Logging"],
        "responses": {
          "204": { "description": "Ring buffer cleared" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SearchRequest": {
        "type": "object",
        "description": "RFC 7644 §3.4.3 SearchRequest for POST /.search",
        "properties": {
          "schemas": { "type": "array", "items": { "type": "string" }, "example": ["urn:ietf:params:scim:api:messages:2.0:SearchRequest"] },
          "filter": { "type": "string", "description": "SCIM filter expression" },
          "startIndex": { "type": "integer", "default": 1 },
          "count": { "type": "integer", "default": 100 },
          "attributes": { "type": "string", "description": "Comma-separated list of attributes to include" },
          "excludedAttributes": { "type": "string", "description": "Comma-separated list of attributes to exclude" },
          "sortBy": { "type": "string" },
          "sortOrder": { "type": "string", "enum": ["ascending", "descending"] }
        }
      },
      "LogConfigResponse": {
        "type": "object",
        "description": "Runtime log configuration response from GET /admin/log-config",
        "properties": {
          "globalLevel": { "type": "string", "enum": ["TRACE", "DEBUG", "INFO", "WARN", "ERROR", "FATAL", "OFF"], "description": "Current global minimum log level" },
          "categoryLevels": { "type": "object", "additionalProperties": { "type": "string" }, "description": "Per-category level overrides" },
          "endpointLevels": { "type": "object", "additionalProperties": { "type": "string" }, "description": "Per-endpoint level overrides" },
          "includePayloads": { "type": "boolean", "description": "Whether request/response bodies are logged at TRACE/DEBUG" },
          "includeStackTraces": { "type": "boolean", "description": "Whether stack traces are included in ERROR/FATAL output" },
          "maxPayloadSizeBytes": { "type": "integer", "description": "Maximum payload size to log in bytes" },
          "format": { "type": "string", "enum": ["json", "pretty"], "description": "Output format" },
          "availableLevels": { "type": "array", "items": { "type": "string" }, "description": "All valid log level names" },
          "availableCategories": { "type": "array", "items": { "type": "string" }, "description": "All valid log category names" }
        }
      },
      "LogConfigUpdate": {
        "type": "object",
        "description": "Partial update body for PUT /admin/log-config",
        "properties": {
          "globalLevel": { "type": "string", "enum": ["TRACE", "DEBUG", "INFO", "WARN", "ERROR", "FATAL", "OFF"] },
          "includePayloads": { "type": "boolean" },
          "includeStackTraces": { "type": "boolean" },
          "maxPayloadSizeBytes": { "type": "integer" },
          "format": { "type": "string", "enum": ["json", "pretty"] },
          "categoryLevels": { "type": "object", "additionalProperties": { "type": "string" }, "description": "Category name → level overrides" }
        }
      },
      "StructuredLogEntry": {
        "type": "object",
        "description": "A single structured log entry from the ring buffer",
        "properties": {
          "timestamp": { "type": "string", "format": "date-time", "description": "ISO-8601 timestamp" },
          "level": { "type": "string", "enum": ["TRACE", "DEBUG", "INFO", "WARN", "ERROR", "FATAL"], "description": "Log severity" },
          "category": { "type": "string", "description": "Functional category (e.g. scim.user, http, auth)" },
          "message": { "type": "string", "description": "Human-readable log message" },
          "requestId": { "type": "string", "description": "Correlation request ID (UUID)" },
          "endpointId": { "type": "string", "description": "SCIM endpoint ID" },
          "method": { "type": "string", "description": "HTTP method" },
          "path": { "type": "string", "description": "Request URL path" },
          "durationMs": { "type": "integer", "description": "Elapsed time since request start in ms" },
          "error": {
            "type": "object",
            "properties": {
              "message": { "type": "string" },
              "name": { "type": "string" },
              "stack": { "type": "string" }
            }
          },
          "data": { "type": "object", "additionalProperties": true, "description": "Additional structured data" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    }
  },
  "security": [{ "bearerAuth": [] }]
}