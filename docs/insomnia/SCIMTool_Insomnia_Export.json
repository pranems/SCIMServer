    {
      "_id": "req_create_user",
      "_type": "request",
      "parentId": "",
      "name": "Create User",
      "method": "POST",
      "url": "{{ base_url }}/scim/v2/Users",
      "body": {
        "mimeType": "application/scim+json",
        "text": "{\n  \"schemas\":[\"urn:ietf:params:scim:schemas:core:2.0:User\"],\n  \"userName\":\"alice@example.com\",\n  \"displayName\":\"Alice Example\",\n  \"externalId\":\"ext-0001\",\n  \"name\": { \"givenName\":\"Alice\", \"familyName\":\"Example\" },\n  \"emails\": [{ \"value\":\"alice@example.com\", \"type\":\"work\", \"primary\":true }],\n  \"roles\": [{ \"value\":\"engineering:senior\", \"display\":\"Senior Engineer\", \"primary\":true }]\n}"
      },
      "headers": [
        { "name": "Content-Type", "value": "application/scim+json" },
        { "name": "Authorization", "value": "Bearer {{ token }}" }
      ]
    },
    {
      "_id": "req_filter_users",
      "_type": "request",
      "parentId": "",
      "name": "Filter Users (case-insensitive)",
      "method": "GET",
      "url": "{{ base_url }}/scim/v2/Users?filter=userName eq \"ALICE@EXAMPLE.COM\"",
      "headers": [ { "name": "Authorization", "value": "Bearer {{ token }}" } ]
    },
    {
      "_id": "req_patch_valuepath",
      "_type": "request",
      "parentId": "",
      "name": "Patch User - ValuePath Replace",
      "method": "PATCH",
      "url": "{{ base_url }}/scim/v2/Users/{{ user_id }}",
      "body": {
        "mimeType": "application/scim+json",
        "text": "{\"schemas\":[\"urn:ietf:params:scim:api:messages:2.0:PatchOp\"],\"Operations\":[{\"op\":\"replace\",\"path\":\"emails[type eq \\\"work\\\"].value\",\"value\":\"new@example.com\"}]}"
      },
      "headers": [
        { "name": "Content-Type", "value": "application/scim+json" },
        { "name": "Authorization", "value": "Bearer {{ token }}" }
      ]
    },
    {
      "_id": "req_patch_enterprise",
      "_type": "request",
      "parentId": "",
      "name": "Patch User - Enterprise Extension Manager",
      "method": "PATCH",
      "url": "{{ base_url }}/scim/v2/Users/{{ user_id }}",
      "body": {
        "mimeType": "application/scim+json",
        "text": "{\"schemas\":[\"urn:ietf:params:scim:api:messages:2.0:PatchOp\"],\"Operations\":[{\"op\":\"add\",\"path\":\"urn:ietf:params:scim:schemas:extension:enterprise:2.0:User:manager\",\"value\":{\"value\":\"mgr-001\",\"displayName\":\"Bob Manager\"}}]}"
      },
      "headers": [
        { "name": "Content-Type", "value": "application/scim+json" },
        { "name": "Authorization", "value": "Bearer {{ token }}" }
      ]
    },
    {
      "_id": "req_groups_excluded",
      "_type": "request",
      "parentId": "",
      "name": "Get Groups (excludedAttributes=members)",
      "method": "GET",
