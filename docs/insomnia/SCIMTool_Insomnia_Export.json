      "body": {
        "mimeType": "application/json",
        "text": "{\"grant_type\":\"client_credentials\",\"client_id\":\"{{ client_id }}\",\"client_secret\":\"{{ client_secret }}\",\"scope\":\"scim.manage scim.read scim.write\"}"
